
@{
    ViewBag.Title = "SharedAddCourse";
    var id = ViewBag.Id;
}

<h3>DATABASE Courses Available</h3>

<div id="divStudentSchedule">
    <table border="1">
        <thead>
            <tr>
                <th>Course Title</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: viewModel">
            <tr>
                <td data-bind="text: coursetitle"></td>
                <td data-bind="text: instruct"></td>
                <td data-bind="text: year"></td>
                <td data-bind="text: quarter"></td>
                <td data-bind="text: session"></td>
                <td data-bind="text: day"></td>
                <td data-bind="text: time"></td>
                <td><div data-bind="template: { name: 'action-template', data: $data}"></div></td>
            </tr>
        </tbody>
    </table>
</div>

<h3>Courses Available</h3>

<div id="divAddCourse">
    <table>
        <tr>
            <td>CSE 141L</td>
            <td>Isaac Chu</td>
            <td><button data-bind="click: addcourse">Add Course</button></td>
        </tr>
        <tr>
            <td>CSE 136</td>
            <td>Isaac Chu</td>
            <td><button data-bind="click: addcourse">Add Course</button></td>
        </tr>
    </table>
</div>

<script type="text/html" id="action-template">
    <button data-bind="AddCourse: $data">Add Course</button>
</script>

<script type="text/javascript">
    $(document).ready(function () {
        var studentViewModelObj = new StudentViewModel();
        studentViewModelObj.GetEnrollmentSchedule("@id");
    });
</script>
