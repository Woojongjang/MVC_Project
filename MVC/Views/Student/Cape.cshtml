@{
    ViewBag.Title = "Cape";
    var id = ViewBag.Id;
    var course = ViewBag.Class;
}

<h2>View and Edit</h2>
<h3>Click on 'edit' to change your cape score.</h3>
<a href="/Cape/Insert?id=@id">Insert Score</a>
<div id="divViewEditCapes">
    <table border="1">
        <thead>
            <tr>
                <th>Course</th>
                <th>Instructor</th>
                <th>Cape Score</th>
                <th>EDIT</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: viewModel">
            <tr>
                <td data-bind="text: studentid"></td>
                <td data-bind="text: scheduleid"></td>
                <td data-bind="text: instructor"></td>
                <td data-bind="text: rating"></td>
                <td><div data-bind="template: { name: 'action-template', data: $data}"></div></td>
            </tr>
        </tbody>
    </table>
</div>

<script type="text/html" id="action-template">
    <button data-bind="CapeEdie: $data">Edit</button>
</script>

<script type="text/javascript">
    $(document).ready(function () {
        var capeViewModelObj = new CapeViewModel();
        capeViewModelObj.Initialize("@id");
    });
</script>
